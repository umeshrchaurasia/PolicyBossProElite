<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >



    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSave"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"


                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="PROFILE PICTURE"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:textColor="@color/dashboard_title" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible"
                            android:padding="8dp">


                            <ImageView
                                android:id="@+id/ivUser"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_centerInParent="true"
                                android:transitionName="profileTransition"
                                android:background="@drawable/shimmer_circle_placeholder"
                                />


                                <ImageView
                                android:id="@+id/ivProfile"
                                android:layout_width="40dp"
                                android:layout_height="40dp"

                                android:layout_alignParentBottom="true"
                                android:layout_alignStart="@+id/ivUser"
                                android:layout_marginStart="90dp"
                                android:src="@drawable/shimmer_circle_placeholder"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/eight"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rlMyProfile"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivMyProfile"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:visibility="invisible"
                            android:src="@drawable/down_arrow" />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"

                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />



                    <RelativeLayout
                        android:id="@+id/rlAddress"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivAddress"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                           />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />


                    <RelativeLayout
                        android:id="@+id/rlBankDetail"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivBankDetail"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                           />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />




                    <RelativeLayout
                        android:id="@+id/rlDocumentUpload"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivDocumentUpload"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                            android:visibility="invisible"
                           />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />




                    <RelativeLayout
                        android:id="@+id/rlPOSP"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivPOSP"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                           android:visibility="invisible" />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"

                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />


                    <RelativeLayout
                        android:id="@+id/rlAbout"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivAbout"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                           />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />



                    <RelativeLayout
                        android:id="@+id/rlNotify"
                        android:background="@color/shimmer_color"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/ivNotify"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:padding="2dp"
                             />

                        <TextView
                            style="@style/TextStyle.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"

                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="normal" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white" />



                </LinearLayout>





            </LinearLayout>



    </ScrollView>


    <Button
        android:id="@+id/btnSave"
        style="@style/ButtonStyle"
        android:background="@color/shimmer_color"
        android:layout_marginRight="@dimen/eight"
        android:layout_marginLeft="@dimen/eight"
        android:layout_alignParentBottom="true"
        android:minHeight="42dp"
        android:textStyle="bold" />

</RelativeLayout>