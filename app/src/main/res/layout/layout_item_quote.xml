<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">


            <TextView
                android:id="@+id/txtPersonName"
                style="@style/TextViewStyle.Large"
                android:layout_width="0dp"
                android:layout_gravity="right"
                android:layout_weight="90"
                android:gravity="center"
                android:lines="2"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textColor="@color/header_dark_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOverflowMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/threedots"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@color/seperator"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Vehicle"
                    android:textAllCaps="true"
                    android:textColor="@color/description_text" />

                <TextView
                    android:id="@+id/txtVehicleName"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAllCaps="true"
                    android:textColor="@color/header_dark_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    style="@style/TextViewStyle.Small"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Quote date"
                    android:textAllCaps="true"
                    android:textColor="@color/description_text" />

                <TextView
                    android:id="@+id/txtQuoteDate"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textAllCaps="true"
                    android:textColor="@color/header_dark_text" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

