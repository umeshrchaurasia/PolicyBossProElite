<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="100">


            <TextView
                android:id="@+id/txtPersonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="80"
                android:gravity="center"
                android:lines="2"
                android:textAllCaps="true"
                android:textAppearance="@style/TextStyle.Body1"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOverflowMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/threedots"
                android:textAppearance="@style/TextStyle.Title"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@color/seperator"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vehicle"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_light_text" />

                <TextView
                    android:id="@+id/txtVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_dark_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CRN NO."
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_light_text" />

                <TextView
                    android:id="@+id/txtCrnNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_dark_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quote date"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_light_text" />

                <TextView
                    android:id="@+id/txtQuoteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.Body1"
                    android:textColor="@color/header_dark_text"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

