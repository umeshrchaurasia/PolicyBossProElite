<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <RadioGroup
            android:id="@+id/rgProperty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/rbimgMale"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <RadioButton
                android:id="@+id/rbReady"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="29"
                android:checked="true"
                android:text="READY" />

            <RadioButton
                android:id="@+id/rbUnder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="39"
                android:text="UNDER CONS" />

            <RadioButton
                android:id="@+id/rbSearching"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="32"
                android:text="SEARCHING" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgProperty2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/rbimgMale"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <RadioButton
                android:id="@+id/rbResale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="29"
                android:text="RESALE" />

            <RadioButton
                android:id="@+id/rbForcons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="39"
                android:text="FOR CONS" />

            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="32"
                android:text="OTHER" />
        </RadioGroup>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/lightGrey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView10"
            style="@style/TextAppearence.App.TextInputLayout"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:hint="Property Cost">



            <EditText
                android:id="@+id/etCostOfProp"
                style="@style/Style.edittext"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="9"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView14"
            style="@style/TextAppearence.App.TextInputLayout"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:hint="Loan Required">

            <EditText
                android:id="@+id/txtMaxLoanAmntAllow"
                style="@style/Style.edittext"
                android:enabled="false"
                android:inputType="none" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView104"
            style="@style/TextAppearence.App.TextInputLayout"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:hint="Enter City">

            <AutoCompleteTextView

                android:id="@+id/acCity"
                style="@style/Style.edittext"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="10dp">



        <Spinner
            android:visibility="gone"
            android:id="@+id/spNewLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"


            android:visibility="gone">

            <TextView
                android:id="@+id/txtDispalayMinCostProp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="5 lac"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/txtDispalayMaxCostProp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="50 cr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        </RelativeLayout>


        <SeekBar
            android:id="@+id/sbCostOfProp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5000"
            android:progress="5"
            android:thumbTintMode="multiply"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtApplicantDetail"
            style="@style/TextViewStyle.Large"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=" LOAN TENURE"
            android:background="@color/white"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txtDispalayMinTenureYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1 Yr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/txtDispalayMaxTenureYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="30 Yr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        </RelativeLayout>

        <!--<com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar-->
        <!--android:id="@+id/sbTenure"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:bar_color="#F7BB88"-->
        <!--app:bar_highlight_color="#E07416"-->
        <!--app:left_thumb_color="#E07416"-->
        <!--app:left_thumb_color_pressed="#99633A"-->
        <!--app:max_value="30"-->
        <!--app:min_value="1"-->
        <!--app:steps="1" />-->

        <SeekBar
            android:id="@+id/sbTenure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:max="30"
            android:progress="1"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/custom_thumb" />

        <TextView
            android:id="@+id/textView2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tenure in years"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <EditText
            android:id="@+id/etTenureInYear"
            style="@style/Style.edittext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:digits="0123456789"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="2" />






    </LinearLayout>


</LinearLayout>