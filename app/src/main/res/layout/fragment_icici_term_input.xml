<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90">

        <android.support.v7.widget.CardView
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/layoutCompare"
                    layout="@layout/content_term_header" />

                <!--Compare ICICI-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Pincode">

                        <EditText
                            android:id="@+id/etPincode"
                            style="@style/Style.edittext"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:maxLength="6" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Permium term">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="left"
                            android:text="Payment term"
                            android:textColor="@color/blue"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/spICICIPremiumTerm"
                            style="@style/SpinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dropDownWidth="200dp"
                            android:entries="@array/icici_payment_term" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Email">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="left"
                            android:text="Option"
                            android:textColor="@color/blue"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/spICICIOptions"
                            style="@style/SpinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dropDownWidth="200dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Permium term">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:gravity="left"
                            android:text="Permium frequency"
                            android:textColor="@color/blue"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/spICICIPremiumFrequency"
                            style="@style/SpinnerStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dropDownWidth="200dp"
                            android:entries="@array/icici_premium_frequency" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/header_light_text"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Choose death benefit payout"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtICICILumpSum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="LUMP SUM"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txtICICIRegularIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/customeborder"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="REGULAR INCOME"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txtICICIIncreasingIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/customeborder"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="INCREASING INCOME"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:gravity="center|left"
                        android:text="Sum Assured"
                        android:textAllCaps="true"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/minusICICISum"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="-" />

                    <EditText
                        android:id="@+id/etICICISumAssured"
                        style="@style/Style.edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusICICISum"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:gravity="center|left"
                        android:text="Policy Term"
                        android:textAllCaps="true"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/minusICICIPTerm"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="-" />

                    <EditText
                        android:id="@+id/etICICIPolicyTerm"
                        style="@style/Style.edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusICICIPTerm"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:gravity="center|left"
                        android:text="Premium Term"
                        android:textAllCaps="true"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/minusICICIPreTerm"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="-" />

                    <EditText
                        android:id="@+id/etICICIPremiumTerm"
                        style="@style/Style.edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusICICIPreTerm"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCritical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:gravity="center|left"
                        android:text="Critical illness"
                        android:textAllCaps="true"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/minusICICICritical"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="-" />

                    <EditText
                        android:id="@+id/etICICICriticalIllness"
                        style="@style/Style.edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusICICICritical"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAccidental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:gravity="center|left"
                        android:text="ACCIDENTAL DEATH BENEFIT"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/minusICICIAcc"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="-" />

                    <EditText
                        android:id="@+id/etICICIAccidentalBenefits"
                        style="@style/Style.edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="45"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/plusICICIAcc"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="10"
                        android:background="@drawable/customeborder_blue"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </ScrollView>

    <Button
        android:id="@+id/btnGetQuote"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Get quote" />
</LinearLayout>
