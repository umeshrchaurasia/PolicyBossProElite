<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"

    android:weightSum="100"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".inspection.splash.SplashScreen"
    tools:showIn="@layout/activity_splash_screen_inspect">


    <LinearLayout
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:weightSum="100"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:paddingBottom="7dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo" />


        <TextView

            android:id="@+id/txtodo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical|center_horizontal"
            android:text="TAKE 360 DEGREE VIDEO OF VEHICLE"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/txtchasis"
            android:text="CAPTURE IMAGE OF CHASSIS NUMBER"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal|bold" />
        <TextView

            android:id="@+id/txtrc"
            android:text="CAPTURE IMAGE OF RC BOOK"

            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/txtpolicy"
            android:text="CAPTURE IMAGE OF POLICY CERTIFICATE"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:paddingBottom="7dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:scaleType="fitStart"
            android:src="@drawable/autspect" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"

        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100">



            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:orientation="vertical"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/car_gif_img"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:padding="3dp">

                <TextView
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:gravity="center_vertical"
                    android:text="Close the bonnet. Make sure that your\nvehicle is parked such that you can easily\nwalk around the car to take a 360 degree\nvideo of the car"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="50">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:weightSum="100">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:scaleType="centerInside"
                    android:src="@drawable/odometer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:background="@drawable/button_sel"
                        android:text="Ok"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="40"
                        android:background="@drawable/button_sel_2"
                        android:text="TAKE AGAIN"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:gravity="center"
                    android:text="Stand 5 feet away in front of the vechicle facing the front number plate.When ypu start the video keep moving aroung the vechicle in an anti-clockwise direction .Try to keep the pace with the frames that will be shown on top of the screen."
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="70"
                    android:background="@drawable/dotted" />

                <Button
                    android:layout_margin="15dp"
                    android:textSize="13sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:background="@drawable/button_sel"
                    android:text="TOUCH HERE TO START\n THE VIDEO"
                    android:textColor="@android:color/white" />

                <TextView
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible"
            android:weightSum="50">

            //Start VIdeo

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:id="@+id/leanstartvideoandclick"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:gravity="center_vertical"
                    android:text="Stand 5 feet away in front of the vehicle facing the front number plate. When you start the video keep moving around the vehicle in an anti-clockwise direction . Try to keep the pace with the frames that will be shown on top of the screen."
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    android:layout_weight="70"
                    android:background="@drawable/dotted" />

                <Button
                    android:layout_margin="10dp"
                    android:textSize="10sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:id="@+id/btnStartVideo"
                    android:background="@drawable/button_sel_2"
                    android:text="TOUCH HERE TO START\n THE VIDEO"
                    android:textColor="@android:color/white" />


            </LinearLayout>

            //Video Capture

            <LinearLayout
                android:id="@+id/leancapture"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75">

                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:scaleType="fitCenter"

                        />

                    <Button
                        android:id="@+id/btnplay"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="clip_vertical|center"

                        android:background="@drawable/play"
                        android:text="Play"
                        android:textColor="@android:color/white"
                        android:visibility="visible" />

                </FrameLayout>






                <LinearLayout
                    android:paddingBottom="10dp"
                    android:id="@+id/leanokandretake"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="11" />

                    <Button
                        android:id="@+id/btnOKVIDEO"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_sel"
                        android:text="Ok"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8" />

                    <Button
                        android:id="@+id/btnRETAKEVIDEO"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="35"
                        android:background="@drawable/button_sel_2"
                        android:text="TAKE AGAIN"
                        android:textColor="@android:color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="11" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
