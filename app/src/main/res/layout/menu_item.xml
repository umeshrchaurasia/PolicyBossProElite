<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:layout_marginLeft="@dimen/twelve"
    android:layout_marginRight="@dimen/twelve"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="@dimen/_3dp"
    android:background="@color/off_white"
    app:cardCornerRadius="@dimen/eight"
    android:elevation="@dimen/_3dp"
    android:clipToPadding="false"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lyParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/eight"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/menu24">

            </ImageView>

            <TextView
                android:id="@+id/txtMenuName"
                android:text=""

                android:layout_marginTop="@dimen/_2dp"
                android:layout_marginLeft="@dimen/eight"
                style="@style/TextViewStyle.BannerLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="@dimen/_2dp"
                android:src="@drawable/pluse"/>

        </LinearLayout>

        <View
            android:id="@+id/menuView"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginRight="@dimen/eight"
            android:layout_marginLeft="@dimen/eight"
            android:background="@color/lightGrey"
            />

        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginBottom="@dimen/eight"
            android:layout_marginRight="@dimen/eight"
            android:layout_marginLeft="@dimen/eight"
            android:id="@+id/rvChildMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>





</androidx.cardview.widget.CardView>
