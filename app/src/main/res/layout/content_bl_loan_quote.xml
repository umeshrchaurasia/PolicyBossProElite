<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:background="@color/white"
android:orientation="vertical">


<TextView
    android:id="@+id/txtInputSummry"
    android:background="@color/white"
    android:text="INPUT SUMMARY"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    android:textColor="@color/black"
    android:gravity="center_horizontal"
    android:textStyle="bold"
    android:visibility="gone"
    style="@style/TextViewStyle.Large" />

<android.support.v7.widget.CardView
    android:id="@+id/cvInputSummary"
    style="@style/CardViewStyle"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/lyInputSumary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="94"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:orientation="vertical"
                    android:layout_gravity="left">

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:text="APPLICANT NAME"
                        />

                    <TextView
                        android:id="@+id/txtAppName"
                        style="@style/TextViewStyle.Small"
                        android:text=""
                        android:textColor="@color/black" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical"
                    android:layout_gravity="left">

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:text="REQ. LOAN AMOUNT"
                        />
                    <TextView
                        android:id="@+id/txtLoanAmnt"
                        style="@style/TextViewStyle.Small"
                        android:text=""
                        android:textColor="@color/black"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical"
                    android:layout_gravity="left">

                    <TextView
                        style="@style/TextViewStyle.VerySmall"
                        android:text="LOAN TENURE"
                        />
                    <TextView
                        android:id="@+id/txtLoanTenure"
                        style="@style/TextViewStyle.Small"
                        android:text=""
                        android:textColor="@color/black"
                        />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:src="@mipmap/edit_icon" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

<TextView
    android:id="@+id/txtCount"
    style="@style/TextViewStyle.Large"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:textColor="@color/colorAccent"
    android:gravity="left"
    android:textStyle="normal" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/rvbLQuotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"/>
</LinearLayout>
