<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:gravity="center"
    android:background="@drawable/backgroun"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

           android:padding="5dp"

            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rect_shape"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mfmlogo"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:layout_gravity="left"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/payment"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">


                    <TextView
                        android:id="@+id/txtprdName"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="5dp"

                        android:paddingRight="5dp"
                        android:textSize="18sp"
                        android:text="PAYMENT DETAILS"
                        android:gravity="left"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/lblcustomername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"

                        android:textColor="@color/description_text"
                        android:text="Customer Name :"
                        />
                    <TextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="left"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/lblname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"

                        android:textColor="@color/description_text"
                        android:text="Name :"
                        />
                    <TextView
                        android:id="@+id/txtProdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="left"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/lblPayable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"

                        android:textColor="@color/description_text"
                        android:text="Payable Amount :"
                        />
                    <TextView
                        android:id="@+id/txtDisplayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextViewStyle.Medium"
                        android:layout_gravity="left"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text=""
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/btnBuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ButtonStyle"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#fcfcfc"
                            android:background="#00bff3"
                            android:text="BUY NOW"


                            />
                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ButtonStyle"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#fcfcfc"
                            android:background="#00bff3"
                            android:text="CANCEL"

                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp"

            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rect_shape"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/mfmlogo"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">


                    <TextView
                        android:id="@+id/txtSuccessTitle"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="0dp"
                        android:paddingBottom="5dp"

                        android:paddingRight="5dp"
                        android:textSize="18sp"
                        android:text="Success"
                        android:gravity="left"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:id="@+id/txtSuccessMessage"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=""
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/dashboard_bg">

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"

                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/btnContinue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ButtonStyle"
                            android:paddingLeft="45dp"
                            android:paddingRight="45dp"
                            android:textColor="#fcfcfc"
                            android:background="#00bff3"
                            android:text="CONTINUE"


                            />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
