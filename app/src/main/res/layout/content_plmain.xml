<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.datacomp.magicfinmart.loan_fm.personalloan.addquote.PLMainActivity"
    tools:showIn="@layout/activity_plmain">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bottomNavigation"
        android:animateLayoutChanges="true" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_gravity="bottom"
        android:layout_marginTop="-20dp"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/navigationloan" />

    <LinearLayout
        android:id="@+id/lyheader"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/bottomNavigation"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:weightSum="100">

            <ImageView

                android:id="@+id/ivHdrInput"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="70"
                android:visibility="visible"
                android:src="@drawable/rect_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:weightSum="100">

            <ImageView

                android:id="@+id/ivHdrQuote"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="70"
                android:visibility="visible"
                android:src="@drawable/rect_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="34"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:weightSum="100">

            <ImageView

                android:id="@+id/ivHdrParent3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="65"
                android:src="@drawable/rect_shape" />

        </LinearLayout>


    </LinearLayout>

    <!--app:itemBackground="@color/colorPrimaryDark"-->
    <!--app:itemIconTint="@color/white"-->
    <!--app:itemTextColor="@color/white"-->

    <!--android:background="?android:attr/windowBackground"-->
    <!--android:foreground="?attr/selectableItemBackground"-->
</RelativeLayout>
