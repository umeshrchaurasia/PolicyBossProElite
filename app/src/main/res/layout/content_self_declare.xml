<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banckground_without_logo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Select Damaged Parts :"
                android:textColor="@color/white" />

            <Button

                android:id="@+id/btnFront"
                style="@style/ButtonStyleInspect"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:text="FrRONT/REAR" />

            <Button
                android:id="@+id/btnLeft"
                style="@style/ButtonStyleInspect"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:text="LEFT" />

            <Button
                android:id="@+id/btnRight"
                style="@style/ButtonStyleInspect"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:text="RIGHT" />

            <Button
                android:id="@+id/btnGlass"
                style="@style/ButtonStyleInspect"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="40dp"
                android:text="GLASS/OTHERS" />


            <Button
                android:id="@+id/btn_submit"
                style="@style/ButtonStyleInspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:minHeight="40dp"
                android:text="SUBMIT" />
        </LinearLayout>


        <!--  <FrameLayout
              android:id="@+id/frame"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="70"
              android:visibility="gone"
              app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCommon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
