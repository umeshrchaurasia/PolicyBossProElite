<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="COMPANY"
                        android:textAppearance="@style/TextStyle.Body1" />

                    <Switch
                        android:id="@+id/swIndividual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="INDIVIDUAL"
                        android:textAppearance="@style/TextStyle.Body1"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VERIFY YOUR CAR DETAILS FOR "
                        android:textAppearance="@style/TextStyle.Body1" />

                    <TextView
                        android:id="@+id/tvCarNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="MH 01 EQ 2620"
                        android:textAppearance="@style/TextStyle.Body1"
                        android:textColor="@color/tab_color"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">
            <!--All inputs-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Make, Model">

                    <AutoCompleteTextView
                        android:id="@+id/acMakeModel"
                        style="@style/Style.edittext" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <!-- varient -->
                        <Spinner
                            android:id="@+id/spVarient"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Spinner
                            android:id="@+id/spFuel"
                            style="@style/spinnerLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <!--fuel type-->

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:hint="Ext. CNG/LPG Value">

                        <EditText
                            android:id="@+id/etExtValue"
                            style="@style/Style.edittext"
                            android:layout_height="wrap_content"
                            android:enabled="false" />
                    </android.support.design.widget.TextInputLayout>

                    <!--NCB layout-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Switch
                            android:id="@+id/switchNcb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:text="Claim in this year"
                            android:textAllCaps="true"
                            android:textColor="@color/button_color"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/spNcbPercent"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <!--Registration date and manufacturing date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:hint="Reg Date">

                        <EditText
                            android:id="@+id/etRegDate"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_date"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:hint="Manufacturer Date">

                        <EditText
                            android:id="@+id/etMfgDate"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_date"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <!--present insurer-->

                <android.support.design.widget.TextInputLayout style="@style/TextAppearence.App.TextInputLayout">

                    <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="3dp"-->
                    <!--android:background="@null"-->
                    <!--android:text="Present Insurer"-->
                    <!--android:textColor="@color/header_dark_text"-->
                    <!--android:textSize="12sp" />-->

                    <Spinner

                        android:id="@+id/spPrevIns"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>


                <!--RTO and Expiry date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <!--rto detail-->
                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:hint="RTO">

                        <AutoCompleteTextView

                            android:id="@+id/acRto"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_rto" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:hint="Expiry Date">

                        <EditText
                            android:id="@+id/etExpDate"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_date"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <!--customer detail-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:hint="Customer Name">

                        <EditText
                            android:id="@+id/etCustomerName"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_person" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:hint="Mobile">

                        <EditText
                            android:id="@+id/etMobile"
                            style="@style/Style.edittext"
                            android:drawableRight="@drawable/vector_mobile"
                            android:inputType="number"
                            android:maxLength="10" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

