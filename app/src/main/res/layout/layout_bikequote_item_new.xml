<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_spinner"
    style="@style/CardViewStyle"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgInsurerLogo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="20"
                android:gravity="center"
                android:padding="6dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtInsuranceCompName"
                style="@style/TextViewStyle.Large"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:maxLines="2"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="20"
                android:gravity="center"
                android:padding="6dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="20"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="IDV" />

                <TextView
                    android:id="@+id/txtIDV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:text="787878787"
                    android:textColor="@color/header_text_color"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="30"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtFinalPremium"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:background="#ff5c61"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="90dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txtPremiumBreakUp"
                    style="@style/TextViewStyle.Small"
                    android:gravity="center|top"
                    android:text="Premium"
                    android:textAllCaps="true"
                    android:textColor="#ff5c61" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBuy"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:background="#f38d1e"
                    android:drawableLeft="@drawable/vector_cart"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="90dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:text="BUY"
                    android:textColor="@android:color/white" />

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:gravity="center|top"
                    android:text="Premium"
                    android:textAllCaps="true"
                    android:textColor="#ff5c61"
                    android:visibility="invisible" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llAddon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="Add-ons :"
                android:textSize="12sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvAddOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
