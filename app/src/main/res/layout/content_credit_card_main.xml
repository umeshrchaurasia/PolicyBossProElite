<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.datacomp.magicfinmart.creditcard.CreditCardMainActivity"
    tools:showIn="@layout/activity_credit_card_main">

    <android.support.v7.widget.CardView
        android:id="@+id/cvIcici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            android:src="@drawable/icici_credit_crd" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvRbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            android:src="@drawable/rbl_credit_card" />
    </android.support.v7.widget.CardView>
</LinearLayout>
