<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.datacomp.magicfinmart.loan_fm.personalloan.addquote.PersonalLoanActivity"
    tools:showIn="@layout/activity_add_plquote">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetQuote"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"

            app:cardElevation="2dp">

            <include
                android:id="@+id/llApplicantDetail"
                layout="@layout/layout_personal_appl_detail" />
        </android.support.v7.widget.CardView>
    </ScrollView>


    <Button
        android:id="@+id/btnGetQuote"
        style="@style/ButtonStyle"
        android:layout_alignParentBottom="true"
        android:text="GET BEST QUOTES " />
</RelativeLayout>

