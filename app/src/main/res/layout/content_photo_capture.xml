<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/banckground_without_logo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".inspection.selfdeclaration.PhotoCaptureActivity"
    tools:showIn="@layout/activity_photo_capture">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Front / Rear / Left /Right :"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFront"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivRear"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivLeft"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivRight"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Corners (Take Pictures of four corners):"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCorner1"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivCorner2"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivCorner3"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivCorner4"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="ROOF TOP AND UNDERCHASSIS :"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTop"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

                <ImageView
                    android:id="@+id/ivBottom"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/upload" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
