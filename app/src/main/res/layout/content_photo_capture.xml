<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".inspection.selfdeclaration.PhotoCaptureActivity"
    tools:showIn="@layout/activity_photo_capture">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical">

            <LinearLayout
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="16"
                android:weightSum="100"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:paddingBottom="7dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/logo" />


                <TextView

                    android:id="@+id/txtodo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Upload Vehicle Detail"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtchasis"
                    android:text="CAPTURE IMAGE OF CHASSIS NUMBER"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />
                <TextView

                    android:id="@+id/txtrc"
                    android:text="CAPTURE IMAGE OF RC BOOK"

                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:id="@+id/txtpolicy"
                    android:text="CAPTURE IMAGE OF POLICY CERTIFICATE"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:paddingBottom="7dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/autspect" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnCont"
                    style="@style/ContinueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Continue"
                    android:textAllCaps="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="10dp"
                android:layout_weight="80"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Front / Rear / Left /Right :"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/header_text_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivFront"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivRear"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivLeft"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivRight"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Corners (Take Pictures of four corners):"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/header_text_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCorner1"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivCorner2"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivCorner3"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivCorner4"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="ROOF TOP AND UNDERCHASSIS :"
                        android:textStyle="bold"
                        android:textColor="@color/header_text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivTop"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                        <ImageView
                            android:id="@+id/ivBottom"
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/upload" />

                    </LinearLayout>
                </LinearLayout>

    </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
