<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/llPersonalInfo"
        style="@style/CardStyle.Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Option"
                        android:textSize="10sp" />

                    <Spinner
                        android:id="@+id/spOptions"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/icici_options" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Permium term">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Permium term"
                        android:textSize="10sp" />

                    <Spinner
                        android:id="@+id/spPremiumTerm"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/icici_payment_term" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Permium term">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Permium frequency"
                        android:textSize="10sp" />

                    <Spinner
                        android:id="@+id/spPremiumFrequency"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/icici_premium_frequency" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Permium term"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Permium term"
                        android:textSize="10sp" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/header_light_text"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Choose death benefit payout"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="LUMP SUM"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/customeborder"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="REGULAR INCOME"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/customeborder"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="INCREASING INCOME"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:text="Sum Assured"
                    android:textAllCaps="true"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/etSumAssured"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:inputType="number"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:text="Policy Term"
                    android:textAllCaps="true"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/etPolicyTerm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:inputType="number"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:text="Premium Term"
                    android:textAllCaps="true"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/etPremiumTerm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:inputType="number"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:text="Critical illness"
                    android:textAllCaps="true"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/etCriticalIllness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:inputType="number"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="100">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center|left"
                    android:text="ACCIDENTAL DEATH BENEFIT"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="-" />

                <EditText
                    android:id="@+id/etAccidentalBenefits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:inputType="number"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="10"
                    android:background="@drawable/customeborder_blue"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
