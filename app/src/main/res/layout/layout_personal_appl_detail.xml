<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView2s"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="Applicant Name">

                    <EditText
                        android:id="@+id/etNameOfApplicant"
                        android:maxLines="1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:drawableRight="@drawable/vector_person"
                        android:inputType="textCapWords"
                        style="@style/Style.edittext" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/TextViewStyle.Medium"
                        android:gravity="center"
                        android:text="Gender" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txtrbimgMale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder_blue"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Male"
                            android:textColor="@color/colorPrimary" />

                        <TextView

                            android:id="@+id/txtrbimgFemale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Female"
                            android:textColor="@color/description_text" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView4"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="Date of Birth">

                    <EditText
                        android:id="@+id/et_DOB"
                        style="@style/Style.edittext"
                        android:drawableRight="@drawable/vector_date"
                        android:focusable="false" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView39"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="Occupation" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txtSalaried"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder_blue"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="SALARIED"
                            android:textColor="@color/colorPrimary" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView10"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="Mothly Income">


                    <EditText
                        android:id="@+id/etMonthlyInc"
                        style="@style/Style.edittext"
                        android:digits="0123456789"
                        android:ems="10"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView104"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:hint="EMI,If Any">

                    <EditText
                        android:id="@+id/etEMI"
                        style="@style/Style.edittext"
                        android:digits="0123456789"
                        android:ems="10"
                        android:inputType="phone"
                        android:maxLength="9" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView101"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="PAN">

                    <EditText
                        android:id="@+id/etPAN"
                        style="@style/Style.edittext"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"

                        android:maxLength="10"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView1014"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:hint="Mobile No">

                    <EditText
                        android:id="@+id/etcontact"
                        style="@style/Style.edittext"
                        android:digits="0123456789"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="10" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textView2"
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:hint="Required Loan Amount">

                    <EditText
                        android:id="@+id/etCostOfProp"
                        style="@style/Style.edittext"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="10"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <TextView

                style="@style/TextViewStyle.Large"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text=" LOAN TENURE"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/txtDispalayMinTenureYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="1 Yr"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                <TextView
                    android:id="@+id/txtDispalayMaxTenureYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5 Yr"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/etTenureInYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/blue_background"
                    android:text="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/white" />
            </RelativeLayout>


            <SeekBar
                android:id="@+id/sbTenure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:max="4"
                android:progress="1"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:maxHeight="8dp"
                android:minHeight="8dp"
                android:thumb="@drawable/custom_thumb" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>