<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetQuote"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvNewRenew"
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="NEW VEHICLE"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextStyle.TextMedium" />

                    <Switch
                        android:id="@+id/switchNewRenew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/tvRenew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="RENEWAL"
                        android:textAppearance="@style/TextStyle.TextMedium"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="COMPANY"
                        android:textAppearance="@style/TextStyle.TextMedium" />

                    <Switch
                        android:id="@+id/swIndividual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="INDIVIDUAL"
                        android:textAppearance="@style/TextStyle.TextMedium"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRegNo"
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ENTER VEHICLE REGISTRATION NO."
                    android:textAppearance="@style/TextStyle.TextMedium"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/llRegNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/etreg1"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:inputType="text"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg2"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:inputType="text"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg3"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg4"
                        style="@style/Style.edittext"
                        android:layout_width="80dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="4" />

                    <Button
                        android:id="@+id/btnGo"
                        style="@style/ButtonStyle.Colored"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:minHeight="35dp"
                        android:text="GO!" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHintRegNo"
                    style="@style/TextStyle.TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/llRegNo"
                    android:layout_alignRight="@+id/llRegNo"
                    android:layout_below="@+id/llRegNo"
                    android:layout_marginTop="2dp"
                    android:text="e.g.MH 04 EQ 1234 " />

                <TextView
                    android:id="@+id/tvOr"
                    style="@style/TextStyle.TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHintRegNo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="OR"
                    android:textColor="@color/button_color"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvOr"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dont know registration number?"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/tvDontKnow"
                        style="@style/TextStyle.TextMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="Click Here"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cvInput"-->
        <!--style="@style/CardStyle.Home"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="visible">-->

        <include
            android:id="@+id/cvInput"
            layout="@layout/layout_car_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--</android.support.v7.widget.CardView>-->


    </LinearLayout>

    <Button
        android:id="@+id/btnGetQuote"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GET QUOTES"
        android:visibility="gone" />

</RelativeLayout>

