<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetQuote"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvNewRenew"
            style="@style/CardViewStyle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="6dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="NEW VEHICLE"
                    android:textAllCaps="true" />

                <Switch
                    android:id="@+id/switchNewRenew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="RENEWAL"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRegNo"
            style="@style/CardViewStyle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/fab_margin">

                <TextView
                    android:id="@+id/head"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ENTER VEHICLE REGISTRATION NO"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/llRegNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etreg1"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg2"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg3"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg4"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="4" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHintRegNo"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/llRegNo"
                    android:layout_alignRight="@+id/llRegNo"
                    android:layout_below="@+id/llRegNo"
                    android:layout_marginTop="2dp"
                    android:text="e.g.MH 04 EQ 1234 "
                    android:textColor="@color/secondary_text_color" />

                <TextView
                    android:id="@+id/tvOr"
                    style="@style/TextViewStyle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHintRegNo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="OR"
                    android:textColor="@color/secondary_text_color"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvOr"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dont know registration number?"
                        android:textAllCaps="true"
                        android:textColor="@color/secondary_text_color" />

                    <TextView
                        android:id="@+id/tvDontKnow"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Click Here"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvInput"
            style="@style/CardViewStyle"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardElevation="2dp">

            <include layout="@layout/layout_car_input" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/btnGetQuote"
        style="@style/ButtonStyle"
        android:layout_alignParentBottom="true"
        android:text="GET QUOTES"
        android:visibility="gone" />

</RelativeLayout>

