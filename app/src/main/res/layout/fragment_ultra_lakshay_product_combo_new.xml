                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:text="Sum"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicSum"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcSum"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:text="Premium Year 1"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicPremYearOne"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcPremYearOne"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        android:id="@+id/txtOtherYear"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:text="Premium - Renewal"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicPremOtherYears"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
