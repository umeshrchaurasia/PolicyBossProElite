<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_dashboard"
    android:orientation="vertical">
    <!--tools:context=".ultralaksha.ultralakshya.fragment.quote.content.UltraLakshayProductCombo"-->
    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/TextViewStyle.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/UltraLakshyaProdCombo"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/tbParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyle.Small"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"

                        android:text="Product"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="LIC \n Jeevan Lakshya"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_blue_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="HDFC\nClick2Protect 3D Plus"
                        android:textColor="@color/white"></TextView>




                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/header_dark_text"
                        android:text="Term"></TextView>

                    <TextView
                        android:id="@+id/txtLicTerm"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcTerm"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/header_dark_text"
                        android:text="PPT"></TextView>

                    <TextView
                        android:id="@+id/txtLicPPT"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcPPT"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:text="Mode"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtLicMode"
                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>

                    <TextView
                        android:id="@+id/txtHdfcMode"
