                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>



                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView

                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="4dp"
                        android:paddingRight="2dp"
                        android:text="Total Premium - Year1"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtTotalOne"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>




                </TableRow>

                <TableRow
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">

                    <TextView

                        style="@style/TextViewStyle.Medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:background="@drawable/cell_shape"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:paddingLeft="3dp"
                        android:paddingRight="2dp"
                        android:text="Total Premium - Renewal"
                        android:textColor="@color/header_dark_text"></TextView>

                    <TextView
                        android:id="@+id/txtTotalTwo"
                        style="@style/TextViewStyle.Large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text=""></TextView>




                </TableRow>

            </TableLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/imgBuyNowHDFC"


                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/buyhdfc"
                    android:scaleType="centerInside"
                    android:text="@string/buyHdfc"></ImageView>


            </android.support.v7.widget.CardView>

