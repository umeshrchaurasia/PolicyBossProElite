<resources>

    <style name="AppThemeBase" parent="AppTheme">

    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--actionbar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@color/window_background</item>-->
        <item name="android:windowBackground">@color/seperator</item>
        <!--<item name="android:textColorPrimary">@color/header_text_color</item>-->
        <!--<item name="android:textColorHint">@color/secondary_text_color</item>-->

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.TabTextAppearence" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!--Input layout text color-->
        <item name="android:textColor">@color/button_color</item>
        <!--hint text size-->
        <item name="android:textSize">11sp</item>

        <item name="colorControlActivated">@color/button_color</item>


    </style>

    <!--TextView style-->
    <style name="TextViewStyle" parent="android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TextViewStyle.Large" parent="TextViewStyle">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextViewStyle.Medium" parent="TextViewStyle">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="TextViewStyle.Small" parent="TextViewStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HeaderLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/blue_border_lightblue_background</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/lightblue_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:background">@drawable/button_round_corners</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">0dp</item>

    </style>
</resources>
